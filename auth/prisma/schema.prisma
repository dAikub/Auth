// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// สร้าง Model (ตาราง) ชื่อ User
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
}